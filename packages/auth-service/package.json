{
  "name": "@focus-academy/auth-service",
  "version": "1.0.0",
  "description": "Authentication service for Focus Training Academy",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest --runInBand",
    "test:watch": "jest --watch --runInBand",
    "test:unit": "jest --selectProjects unit --runInBand",
    "test:integration": "jest --selectProjects integration --runInBand",
    "migrate": "tsx src/scripts/migrate.ts",
    "migrate:rollback": "tsx src/scripts/rollback.ts",
    "migrate:create": "tsx src/scripts/create-migration.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "security:scan": "npm audit"
  },
  "dependencies": {
    "@focus-academy/shared": "file:../shared",
    "express": "^4.18.2",
    "passport": "^0.6.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-microsoft": "^1.0.0",
    "passport-facebook": "^3.0.0",
    "passport-apple": "^2.0.2",
    "passport-jwt": "^4.0.1",
    "jsonwebtoken": "^9.0.1",
    "bcryptjs": "^2.4.3",
    "speakeasy": "^2.0.0",
    "qrcode": "^1.5.3",
    "pg": "^8.11.1",
    "ioredis": "^5.3.2",
    "dotenv": "^16.3.1",
    "winston": "^3.10.0",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.8.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.5",
    "@types/passport": "^1.0.12",
    "@types/passport-google-oauth20": "^2.0.11",
    "@types/passport-facebook": "^3.0.0",
    "@types/passport-jwt": "^3.0.9",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/bcryptjs": "^2.4.2",
    "@types/speakeasy": "^2.0.7",
    "@types/qrcode": "^1.5.1",
    "@types/cors": "^2.8.13",
    "jest": "^29.6.1",
    "ts-jest": "^29.1.1",
    "tsx": "^3.12.7",
    "typescript": "^5.1.6",
    "supertest": "^6.3.3",
    "@types/supertest": "^2.0.12"
  }
}