{
  "name": "@focus-academy/api-gateway",
  "version": "1.0.0",
  "description": "GraphQL API Gateway for Focus Training Academy",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest --runInBand",
    "test:watch": "jest --watch --runInBand",
    "test:integration": "jest --testPathPattern=integration --runInBand",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "db:migrate": "tsx src/scripts/migrate.ts",
    "db:rollback": "tsx src/scripts/rollback.ts",
    "db:seed": "tsx src/scripts/seed.ts",
    "db:migration:create": "tsx src/scripts/create-migration.ts",
    "security:scan": "npm audit"
  },
  "dependencies": {
    "@apollo/server": "^4.8.1",
    "@focus-academy/shared": "file:../shared",
    "apollo-server-express": "^3.12.1",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.8.1",
    "graphql": "^16.7.1",
    "helmet": "^7.0.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.1",
    "passport": "^0.6.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.1",
    "passport-microsoft": "^1.0.0",
    "pg": "^8.11.1",
    "socket.io": "^4.7.2",
    "speakeasy": "^2.0.0",
    "winston": "^3.10.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20.4.5",
    "@types/passport": "^1.0.12",
    "@types/passport-google-oauth20": "^2.0.11",
    "@types/passport-jwt": "^3.0.9",
    "@types/pg": "^8.10.2",
    "@types/speakeasy": "^2.0.7",
    "@types/supertest": "^2.0.12",
    "jest": "^29.6.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "tsx": "^3.12.7",
    "typescript": "^5.1.6"
  }
}